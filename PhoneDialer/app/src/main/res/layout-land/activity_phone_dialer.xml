<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.pub.cs.systems.eim.lab03.phonedialer.PhoneDialerActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="10dp"
            android:layout_height="20dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_number_edit_text"
            android:layout_gravity="center"
            android:cursorVisible="false"
            android:inputType="none"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="20dp"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rowCount="3"
            android:columnCount="5">

            <Button
                android:id="@+id/generic_button_1"
                android:text="1"
                android:layout_row="0"
                android:layout_column="0"/>

            <Button
                android:id="@+id/generic_button_2"
                android:text="2"
                android:layout_row="0"
                android:layout_column="1"/>

            <Button
                android:id="@+id/generic_button_3"
                android:text="3"
                android:layout_row="0"
                android:layout_column="2"/>

            <Button
                android:id="@+id/generic_button_4"
                android:text="4"
                android:layout_row="0"
                android:layout_column="3"/>

            <Button
                android:id="@+id/generic_button_5"
                android:text="5"
                android:layout_row="0"
                android:layout_column="4"/>

            <Button
                android:id="@+id/generic_button_6"
                android:text="6"
                android:layout_row="1"
                android:layout_column="0"/>

            <Button
                android:id="@+id/generic_button_7"
                android:text="7"
                android:layout_row="1"
                android:layout_column="1"/>

            <Button
                android:id="@+id/generic_button_8"
                android:text="8"
                android:layout_row="1"
                android:layout_column="2"/>

            <Button
                android:id="@+id/generic_button_9"
                android:text="9"
                android:layout_row="1"
                android:layout_column="3"/>

            <Button
                android:id="@+id/generic_button_A"
                android:text="*"
                android:layout_row="2"
                android:layout_column="1"/>

            <Button
                android:id="@+id/generic_button_0"
                android:text="0"
                android:layout_row="1"
                android:layout_column="4"/>

            <Button
                android:id="@+id/generic_button_N"
                android:text="#"
                android:layout_row="2"
                android:layout_column="3"/>

            <ImageButton
                android:id="@+id/call_button"
                android:src="@drawable/call"
                android:layout_gravity="center"
                android:layout_row="2"
                android:layout_column="0"/>

            <ImageButton
                android:id="@+id/backspace_button"
                android:src="@drawable/backspace"
                android:layout_gravity="center"
                android:layout_row="2"
                android:layout_column="2"/>

            <ImageButton
                android:id="@+id/hangup_call_button"
                android:src="@drawable/hangup"
                android:layout_gravity="center"
                android:layout_row="2"
                android:layout_column="4"/>

        </GridLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
